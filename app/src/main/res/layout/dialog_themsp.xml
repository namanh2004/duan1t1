<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/shape_none"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="500dp">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:gravity="center"
           android:background="@color/white"
           android:padding="10dp"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Thêm sản phẩm"
               android:textSize="24dp"
               android:textStyle="bold"
               android:textColor="#000000"
               android:layout_margin="10dp"
               android:id="@+id/tv_themsanpham"
               />
           <ImageView
               android:layout_width="200dp"
               android:layout_height="200dp"
               android:scaleType="centerCrop"
               android:background="@drawable/baseline_crop_original_24"
               android:layout_marginBottom="10px"
               android:id="@+id/imv_addAnh"/>
           <EditText
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:background="@drawable/shape_edittext"
               android:hint="Tên sản phẩm"
               android:padding="10dp"
               android:textColor="#000000"
               android:textColorHint="#B2B2B2"
               android:layout_marginBottom="10dp"
               android:id="@+id/edt_tensp"/>
           <EditText
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:background="@drawable/shape_edittext"
               android:hint="Tên thương hiệu"
               android:padding="10dp"
               android:textColor="#000000"
               android:textColorHint="#B2B2B2"
               android:layout_marginBottom="10dp"
               android:focusable="false"
               android:inputType="none"
               android:clickable="false"
               android:cursorVisible="false"
               android:id="@+id/edt_tenthuongHieu"/>
           <EditText
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:background="@drawable/shape_edittext"
               android:hint="Giá sản phẩm ( đơn vị VND )"
               android:padding="10dp"
               android:inputType="number"
               android:textColor="#000000"
               android:textColorHint="#B2B2B2"
               android:layout_marginBottom="10dp"
               android:id="@+id/edt_giaSP"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <EditText
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="50dp"
                   android:background="@drawable/shape_edittext"
                   android:hint="Cỡ 1, cỡ 2,..."
                   android:padding="10dp"
                   android:textColor="#000000"
                   android:inputType="text"
                   android:textColorHint="#B2B2B2"
                   android:layout_marginBottom="10dp"
                   android:id="@+id/rcv_kichco"/>

           </LinearLayout>
           <EditText
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:background="@drawable/shape_edittext"
               android:hint="Năm sản xuất"
               android:padding="10dp"
               android:textColor="#000000"
               android:textColorHint="#B2B2B2"
               android:layout_marginBottom="10dp"
               android:inputType="number"
               android:id="@+id/edt_namSX"/>
           <EditText
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:background="@drawable/shape_edittext"
               android:hint="Số lượng"
               android:padding="10dp"
               android:textColor="#000000"
               android:textColorHint="#B2B2B2"
               android:inputType="number"
               android:layout_marginBottom="10dp"
               android:id="@+id/edt_soLuong"/>

           <androidx.appcompat.widget.AppCompatButton
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:background="@drawable/btn_them"
               android:layout_marginTop="10dp"
               android:text="Thêm"
               android:textColor="@color/white"
               android:textStyle="bold"
               android:id="@+id/btn_themSP"/>
       </LinearLayout>
   </ScrollView>
</androidx.cardview.widget.CardView>